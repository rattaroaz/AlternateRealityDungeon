@page "/"
@inject NavigationManager Navigation

<h1>Alternate Reality Dungeon</h1>

<div style="display: flex; flex-direction: column; gap: 1rem; max-width: 300px;">
    <button @onclick="StartNewPlayer">New Player</button>
    <button @onclick="LoadExistingPlayer">Load Player</button>
    <button @onclick="OpenMapEditor" style="margin-top: 1rem; background-color: #2a5a2a;">Map Editor</button>
</div>

@code {
    private void StartNewPlayer()
    {
        Navigation.NavigateTo("/new-player");
    }

    private void LoadExistingPlayer()
    {
        Navigation.NavigateTo("/load-player");
    }

    private void OpenMapEditor()
    {
        Navigation.NavigateTo("/map-editor");
    }
}
